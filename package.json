{
  "name": "ts-health",
  "type": "module",
  "version": "0.0.0",
  "description": "TypeScript library for health, fitness & smartwatch data. Oura Ring, WHOOP, Apple Health, Fitbit, Garmin, Polar, Suunto, Coros, Wahoo â€” with FIT parsing, training metrics, and more.",
  "author": "Chris Breuer <chris@stacksjs.org>",
  "license": "MIT",
  "homepage": "https://github.com/stacksjs/ts-health#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stacksjs/ts-health.git"
  },
  "bugs": {
    "url": "https://github.com/stacksjs/ts-health/issues"
  },
  "keywords": [
    "oura",
    "oura-ring",
    "whoop",
    "fitbit",
    "apple-health",
    "garmin",
    "polar",
    "suunto",
    "coros",
    "wahoo",
    "smartwatch",
    "health",
    "fitness",
    "sleep",
    "hrv",
    "readiness",
    "recovery",
    "training",
    "heart-rate",
    "fit-file",
    "gpx",
    "tcx",
    "training-load",
    "tss",
    "vo2max",
    "typescript",
    "bun"
  ],
  "scripts": {
    "fresh": "bunx rimraf node_modules/ bun.lock && bun i",
    "test": "bun test",
    "lint": "bunx --bun pickier lint .",
    "lint:fix": "bunx --bun pickier lint . --fix",
    "changelog": "bunx logsmith --verbose",
    "changelog:generate": "bunx logsmith --output CHANGELOG.md",
    "release": "bun run changelog:generate && bunx bumpx prompt --recursive",
    "dev:docs": "bun --bun bunpress dev",
    "build:docs": "bun --bun bunpress build",
    "preview:docs": "bun --bun bunpress preview",
    "typecheck": "bun --bun tsc --noEmit"
  },
  "devDependencies": {
    "@types/bun": "^1.3.9",
    "better-dx": "^0.2.5",
    "pickier": "^0.1.20"
  },
  "workspaces": [
